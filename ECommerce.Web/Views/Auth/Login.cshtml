@model ECommerce.Shared.Payload.Request.Auth.LoginRequest
@{
    ViewData["Title"] = "Login";
}

<div class="container mx-auto px-4 py-16">
    <div class="max-w-md mx-auto bg-white rounded-lg shadow-lg overflow-hidden">
        <div class="py-4 px-6 bg-blue-600">
            <h2 class="text-2xl font-bold text-white text-center">Sign In</h2>
        </div>

        <div class="p-6">
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
                    <span>@ViewBag.ErrorMessage</span>
                </div>
            }

            <form asp-action="Login" asp-controller="Auth" method="post">
                <div class="mb-4">
                    <label asp-for="UsernameOrEmail" class="block text-gray-700 text-sm font-bold mb-2">Email Address</label>
                    <input asp-for="UsernameOrEmail" type="text" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Enter your email" required>
                    <span asp-validation-for="UsernameOrEmail" class="text-red-500 text-xs mt-1"></span>
                </div>

                <div class="mb-6">
                    <label asp-for="Password" class="block text-gray-700 text-sm font-bold mb-2">Password</label>
                    <input asp-for="Password" type="password" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Enter your password" required>
                    <span asp-validation-for="Password" class="text-red-500 text-xs mt-1"></span>
                </div>
                <div>
                    <button type="submit" class="w-full bg-blue-600 text-white font-bold py-2 px-4 rounded-md hover:bg-blue-700 transition duration-200">
                        Sign In
                    </button>
                </div>
            </form>

            <div class="mt-6 text-center">
                <p class="text-sm text-gray-600">
                    Don't have an account?
                    <a asp-action="Register" asp-controller="Auth" class="text-blue-600 hover:underline font-medium">
                        Sign up now
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>