@model ECommerce.Shared.Paginate.Paginate<ECommerce.Shared.Payload.Response.Product.ProductResponse>
@{
    ViewData["Title"] = "TOTE TALES - Handcrafted Tote Bags";
}

<div class="container mx-auto px-4 py-8">
    <!-- Hero Banner Section -->
    <div class="relative rounded-xl overflow-hidden mb-10 shadow-lg">
        <div class="absolute inset-0 bg-gradient-to-r from-gray-900/70 to-transparent z-10"></div>
        <img src="https://cdn.canvaschamp.in/static/images/landingpage/totebag/banner.jpg" alt="Tote Bags Collection" class="w-full h-96 object-cover">
        <div class="absolute inset-0 flex flex-col justify-center z-20 px-10 md:px-16">
            <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">TOTE TALES</h1>
            <p class="text-xl text-white/90 mb-6 max-w-md">Handcrafted tote bags for every occasion. Stylish, sustainable, and uniquely yours.</p>
            <a href="@Url.Action("Index", "Products")" class="bg-white hover:bg-gray-100 text-gray-800 font-semibold px-6 py-3 rounded-md shadow-md inline-block w-max transition-all duration-300 transform hover:scale-105">
                Browse Collection
            </a>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6" role="alert">
            <span>@ViewBag.ErrorMessage</span>
        </div>
    }

    <!-- Main Categories Section -->
    <section class="mb-16">
        <div class="text-center mb-10">
            <h2 class="text-3xl font-bold text-gray-800">Our Collections</h2>
            <p class="text-gray-600 mt-2">Discover our three signature tote bag styles</p>
            <div class="w-24 h-1 bg-amber-500 mx-auto mt-4"></div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <!-- Style-Based Tote Category -->
            <div class="relative rounded-lg overflow-hidden shadow-md group">
                <img src="https://i.pinimg.com/736x/40/f0/52/40f05237fb848497c0024d88f26a9779.jpg" alt="Style-Based Tote" class="w-full h-72 object-cover transition-transform duration-500 group-hover:scale-110">
                <div class="absolute inset-0 bg-black/40 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                    <div class="text-center p-6">
                        <h3 class="text-white text-2xl font-bold mb-2">Style-Based Tote</h3>
                        <p class="text-white/90 mb-4">Timeless designs for everyday use</p>
                        <a href="@Url.Action("Category", "Products", new { category = "classic" })" class="inline-block px-6 py-2 border-2 border-white text-white hover:bg-white hover:text-gray-800 transition-colors duration-300 rounded-md">Explore</a>
                    </div>
                </div>
            </div>

            <!-- Function-Based Tote Bags Category -->
            <div class="relative rounded-lg overflow-hidden shadow-md group">
                <img src="https://i.pinimg.com/736x/3e/50/6a/3e506ae7724f558a3e4045a8793752bd.jpg" alt="Function-Based Tote Bags" class="w-full h-72 object-cover transition-transform duration-500 group-hover:scale-110">
                <div class="absolute inset-0 bg-black/40 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                    <div class="text-center p-6">
                        <h3 class="text-white text-2xl font-bold mb-2">Function-Based Tote Bags</h3>
                        <p class="text-white/90 mb-4">Statement pieces with unique designs</p>
                        <a href="@Url.Action("Category", "Products", new { category = "canvas-art" })" class="inline-block px-6 py-2 border-2 border-white text-white hover:bg-white hover:text-gray-800 transition-colors duration-300 rounded-md">Explore</a>
                    </div>
                </div>
            </div>

            <!-- Material-Based Tote Bags Category -->
            <div class="relative rounded-lg overflow-hidden shadow-md group">
                <img src="https://i.pinimg.com/736x/75/28/2c/75282c0356d0d0adc7caf6bb4d5b4303.jpg" alt="Material-Based Tote Bags" class="w-full h-72 object-cover transition-transform duration-500 group-hover:scale-110">
                <div class="absolute inset-0 bg-black/40 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                    <div class="text-center p-6">
                        <h3 class="text-white text-2xl font-bold mb-2">Material-Based Tote Bags</h3>
                        <p class="text-white/90 mb-4">Luxury materials, exceptional quality</p>
                        <a href="@Url.Action("Category", "Products", new { category = "premium" })" class="inline-block px-6 py-2 border-2 border-white text-white hover:bg-white hover:text-gray-800 transition-colors duration-300 rounded-md">Explore</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Featured Products Section -->
    <section class="mb-16">
        <div class="flex justify-between items-center mb-8">
            <h2 class="text-2xl font-bold text-gray-800">Featured Products</h2>
            <a href="@Url.Action("Index", "Products")" class="text-amber-600 hover:text-amber-700 font-medium flex items-center">
                View All Products
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                </svg>
            </a>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
            @if (Model?.Items != null && Model.Items.Any())
            {
                foreach (var product in Model.Items.Take(8))
                {
                    <a href="@Url.Action("Details", "Products", new { id = product.Id})"
                       class="group bg-white rounded-xl shadow-sm overflow-hidden transition-all duration-300 hover:shadow-lg transform hover:-translate-y-1">
                        <div class="relative h-64 bg-gray-100 overflow-hidden">
                            @if (!string.IsNullOrEmpty(product.MainImage))
                            {
                                <img src="@product.MainImage" alt="@product.Name" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110">
                            }
                            else
                            {
                                <div class="flex items-center justify-center h-full text-gray-400">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                                    </svg>
                                </div>
                            }
                            <div class="absolute top-3 right-3">
                                <span class="bg-amber-100 text-amber-800 text-xs font-medium px-2.5 py-1 rounded-full">@product.CategoryName</span>
                            </div>
                        </div>
                        <div class="p-5">
                            <h3 class="text-lg font-semibold text-gray-800 mb-1 truncate">@(string.IsNullOrEmpty(product.Name) ? "Product Name" : product.Name)</h3>
                            <div class="flex items-center text-gray-500 text-sm mb-3">
                                <span>@product.Brand</span>
                                @if (!string.IsNullOrEmpty(product.Size))
                                {
                                    <span class="mx-2">•</span>
                                    <span>@product.Size</span>
                                }
                            </div>
                            <p class="text-gray-600 text-sm mb-4 line-clamp-2">@(string.IsNullOrEmpty(product.Description) ? "No description available" : product.Description)</p>
                            <div class="flex justify-between items-center">
                                <span class="text-lg font-bold text-gray-900">@(product.Price > 0 ? $"${product.Price}" : "Price on request")</span>
                                <span class="text-sm text-gray-500">Stock: @product.Stock</span>
                            </div>
                        </div>
                    </a>
                }
            }
            else
            {
                <div class="col-span-full text-center py-12">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                    </svg>
                    <h3 class="text-xl font-medium text-gray-700">No products found</h3>
                    <p class="text-gray-500 mt-2">Please check back later</p>
                </div>
            }
        </div>
    </section>

    <!-- Why Shop With Us Section -->
    <section class="bg-gray-50 rounded-xl p-8 mb-16">
        <div class="text-center mb-8">
            <h2 class="text-2xl font-bold text-gray-800">Why Shop With Us</h2>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="flex flex-col items-center text-center">
                <div class="bg-amber-100 p-4 rounded-full mb-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-amber-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11c0 3.517-1.009 6.799-2.753 9.571m-3.44-2.04l.054-.09A13.916 13.916 0 008 11a4 4 0 118 0c0 1.017-.07 2.019-.203 3m-2.118 6.844A21.88 21.88 0 0015.171 17m3.839 1.132c.645-2.266.99-4.659.99-7.132A8 8 0 008 4.07M3 15.364c.64-1.319 1-2.8 1-4.364 0-1.457.39-2.823 1.07-4" />
                    </svg>
                </div>
                <h3 class="text-lg font-semibold text-gray-800 mb-2">Handcrafted Quality</h3>
                <p class="text-gray-600">Each tote bag is carefully made with attention to detail and quality materials.</p>
            </div>
            <div class="flex flex-col items-center text-center">
                <div class="bg-amber-100 p-4 rounded-full mb-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-amber-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" />
                    </svg>
                </div>
                <h3 class="text-lg font-semibold text-gray-800 mb-2">Eco-Friendly Materials</h3>
                <p class="text-gray-600">Sustainable fabrics and environmentally conscious production processes.</p>
            </div>
            <div class="flex flex-col items-center text-center">
                <div class="bg-amber-100 p-4 rounded-full mb-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-amber-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                    </svg>
                </div>
                <h3 class="text-lg font-semibold text-gray-800 mb-2">Free Shipping</h3>
                <p class="text-gray-600">On all orders over $50. International shipping available.</p>
            </div>
        </div>
    </section>

    <!-- Newsletter Section -->
    <section class="bg-amber-50 rounded-xl p-8 mb-16">
        <div class="max-w-2xl mx-auto text-center">
            <h2 class="text-2xl font-bold text-gray-800 mb-3">Join Our Newsletter</h2>
            <p class="text-gray-600 mb-6">Subscribe to receive updates on new collections and exclusive offers.</p>
            <form class="flex flex-col sm:flex-row gap-3">
                <input type="email" placeholder="Your email address" class="flex-1 px-4 py-3 rounded-md border border-gray-300 focus:outline-none focus:ring-2 focus:ring-amber-500">
                <button type="submit" class="bg-amber-600 hover:bg-amber-700 text-white font-medium px-6 py-3 rounded-md transition-colors duration-300">
                    Subscribe
                </button>
            </form>
        </div>
    </section>

    <!-- Pagination -->
    @if (Model?.TotalPages > 1)
    {
        <div class="flex justify-center mt-10">
            <nav class="inline-flex rounded-md shadow-sm" aria-label="Pagination">
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <a href="@Url.Action("Index", "Home", new { page = i })"
                       class="@(i == ViewBag.CurrentPage
                            ? "bg-amber-600 text-white hover:bg-amber-700"
                            : "bg-white text-gray-700 hover:bg-gray-50")
                            relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium transition-colors duration-150 first:rounded-l-md last:rounded-r-md">
                        @i
                    </a>
                }
            </nav>
        </div>
    }
</div>